/* pages/list/list.wxss */

.container{
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background-color:#ffffff;
}
.title_container text{
  display: flex;
  padding-top: 15rpx;
  justify-content: center;
  color: black;
  font-size: 18px;
}


.item-style{  
  padding: 30rpx;  
  font-size: 40rpx;  
  text-align: center;  
  border-top: 2rpx solid #eee;  
}  

 .mainView {
  padding: 0; 
  width: 100%;
  height: 100vh; 
  background-color: rebeccapurple;
} 
.list {
  width: 100%;
  height: 100%;
  background-color: white;
}
.item {
  width: 100%;
  height: 220rpx;
  background-color: white;
  position: relative;
}
.item_image {
  position: absolute;
  width: 220rpx;
  height: 180rpx;
  top: 30rpx;
  left: 20rpx;
} 
.item_title {
  width: calc(100% - 270rpx);
  position: absolute;
  top: 20rpx;
  left: 260rpx;
  font-weight: 500;
  color: black;
  font-size: 35rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}
.content {
  position:absolute;
  top: 70rpx;
  left: 260rpx;
  height: 80rpx;
  font-weight:40;
  width:calc(100% - 280rpx);
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;  
}
.add_img{
  position: absolute;
  width: 23rpx;
  height: 30rpx;
  left: 260rpx;
  bottom: 20rpx;
}
.address{
  position: absolute;
  bottom: 20rpx;
  left: 300rpx;
  font-size: 12px;
  color: #AAAAAA;
}
.line {
  position: absolute;
  background-color: lavender;
  width: 100%;
  height: 1rpx;
  left: 0;
  bottom: 1rpx; 
}
.complete {
  width: 100%;
  height: 60rpx;
  background-color: white;
  position: relative;
}
.linebottom{
  position: absolute;
  background-color: lavender;
  width: 100%;
  height: 1rpx;
  left: 0;
}
.last {
  position: relative;
  overflow: hidden;
  font-size: 30rpx;
  /* background-color: red; */
  height: 60rpx;
  width: 100%;
  /* bottom:-60rpx; */
  text-align: center;
  color: lightgrey;
  }